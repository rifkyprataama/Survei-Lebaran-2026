// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL") // Mengambil dari .env
  directUrl = env("DIRECT_URL")   // Tambahkan ini khusus untuk Supabase/PostgreSQL
}

model Responden {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  // BAGIAN 1: DATA DIRI
  usia           String
  jenisKelamin   String
  pendidikan     String
  pekerjaan      String
  penghasilan    String
  domisiliProv   String
  domisiliKota   String
  rencanaMudik   String

  // BAGIAN 2-8 (FIELD OPSIONAL)
  alasanTidakMudik String?

  // BAGIAN 3: DETAIL PERJALANAN
  jumlahOrang      String?
  alasanPerjalanan String?
  tujuanProvinsi   String?
  tujuanKota       String?
  tanggalPergi     String?
  jamPergi         String?
  lamaDiTujuan     String?
  totalDana        String?
  pertimbanganModa String?
  modaTransportasi String?

  // BAGIAN 4: KENDARAAN PRIBADI
  jalurMotor         String?
  jalurMobil         String?
  namaTol            String?
  diskonTol          String?
  rekayasaLalin      String?
  rencanaIstirahat   String?
  lokasiRestArea     String?
  mediaTol           String?
  kebiasaanIstirahat String?
  durasiIstirahat    String?
  biayaBBM           String?

  // BAGIAN 5: ANGKUTAN UMUM
  transportKeTerminal   String?
  transportDariTerminal String?
  waktuBeliTiket        String?
  modaAlternatif        String?

  // BAGIAN 6: ARUS BALIK
  tanggalPulang String?
  jamPulang     String?
  modaSama      String?
  modaPulang    String?
  tambahOrang   String?

  // BAGIAN 7: WFA & KEBIJAKAN
  faktorBatal          String?
  persepsiWFA          String?
  pilihanKebijakan     String?
  pilihanTanggalWFA    String?
  ubahHariBerangkat    String?
  tanggalBerangkatBaru String?
  pilihanWFApasca      String?
  ubahHariPulang       String?
  tanggalPulangBaru    String?

  // BAGIAN 8: EVALUASI & KONTAK
  libur2025         String?
  persepsi2025      String?
  saran             String?
  pilihanReward     String?
  sumberInfo        String?
  bersediaResponden String?
  nomorWA           String?
}